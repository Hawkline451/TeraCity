{
    "type" : "engine:GitMenuScreen",
    "skin" : "mainmenu",
    "contents" : {
        "type" : "relativeLayout",
        "contents" : [
            {
                "type" : "UIImage",
                "image" : "engine:github",
                "id" : "title",
                "layoutInfo" : {
                    "width" : 512,
                    "height" : 128,
                    "position-horizontal-center" : {},
                    "position-top" : {
                        "target" : "TOP",
                        "offset" : 48
                    }
                }
            },
            {
                "type" : "UILabel",
                "text" : "GitHub Metrics",
                "family" : "title",
                "id" : "subtitle",
                "layoutInfo" : {
                    "height" : 48,
                    "position-horizontal-center" : {},
                    "position-top" : {
                        "target" : "BOTTOM",
                        "widget" : "title"
                    }
                }
            },
            {
                "type" : "columnLayout",
                "verticalSpacing" : 8,
                "family" : "subtitle",
                "layoutInfo" : {
                    "width" : 500,
                    "position-horizontal-center" : {},
                    "position-top" : {
                        "target" : "BOTTOM",
                        "offset" : 0,
                        "widget" : "subtitle"
                    },
                    "position-bottom" : {
                        "target" : "TOP",
                        "offset" : 10,
                        "widget" : "close"
                    }
                },
                "contents" : [
                	{
                        "type" : "UIBox",
                        "content" : {
                            "type" : "ColumnLayout",
                            "family" : "option-grid",
                            "columns" : 2,
                            "column-widths" : [0.25, 0.75],
                            "verticalSpacing" : 8,
                            "horizontalSpacing" : 8,
                            "contents" : [
                                {
                                	"type" : "UILabel",
                                	"text" : "Project URL: "
                                },
                                {
                                	"type" : "UIText",
                                	"id"   : "projectURL"
                                },
                                {
                                	"type" : "UILabel",
                                	"text" : "Project Name: "
                                },
                                {
                                	"type" : "UIText",
                                	"id"   : "projectName"
                                },
                                {
                                	"type" : "UILabel",
                                	"text" : "Branch: "
                                },
                                {
                                	"type" : "UIText",
                                	"id" : "branch"
                                },
                                {
                                	"type" : "UILabel",
                                	"text" : "From date: "
                                },
                                {
                                	"type" : "ColumnLayout",
                            		"family" : "option-grid",
                            		"columns" : 3,
                            		"verticalSpacing" : 8,
                            		"horizontalSpacing" : 8,
                            		"contents" : [
                            			{
                            				"type" : "UIDropdown",
                            				"id" : "dateYear"
                            			},
                            			{
                            				"type" : "UIDropdown",
                            				"id" : "dateMonth"
                            			},
                            			{
                            				"type" : "UIDropdown",
                            				"id" : "dateDay"
                            			}
                            		]
                                },
                            	{
                                	"type": "UILabel",
                                	"text": "Face to paint: "
                            	},
                            	{
                                	"type": "UIDropdown",
                                	"id": "faceToPaint"
                            	},
                            	{
                                	"type": "UILabel",
                                	"text": "Color Scale: "
                            	},
                            	{
                                	"type": "UIDropdown",
                                	"id": "colorScale"
                            	}
                            ]
                        },
                        "layoutInfo" : {
                            "width" : 450,
                            "position-horizontal-center" : {}
                        }
                    },
                    {
                    	"type" : "ColumnLayout",
                        "family" : "option-grid",
                        "columns" : 2,
                        "column-widths" : [0.50, 0.50],
                        "verticalSpacing" : 8,
                        "horizontalSpacing" : 8,
                        "contents" : [
                    		{
                       			"type" : "UIButton",
                       			"id" : "bugs",
                       			"text" : "Bugs Metrics"
                    		},
                    		{
                       			"type" : "UIButton",
                       			"id" : "versions",
                       			"text" : "Version Metrics"
                    		}
                    	]
                    },
                    {
                        "type": "UILabel",
                        "id"  : "infoField",
                        "text": ""
                    }     
                ]
            },
            {
                "type": "UIButton",
                "text": "Back",
                "id": "close",
                "layoutInfo": {
                    "height": 32,
                    "width": 200,
                    "position-horizontal-center": {},
                    "position-bottom": {
                        "target": "BOTTOM",
                        "offset": 48
                    }
                }
            }
        ]
    }
}